if [ -f Dockerfile ]; then
    rm Dockerfile
    # ---- edits here don't require a docker build ----
    python3 bot.py openai gpt-4.1-nano soul.hal.md account.greg.md thread.greg.md
    # ----------------- end of edits ------------------
else
    rm start
    curl -sL https://github.com/gregclinton/bot/archive/refs/heads/main.zip -o bot.zip
    unzip -q bot.zip
    rm bot.zip
    mv bot-main bot
    cd bot
    sh start
fi
