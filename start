if [ -f Dockerfile ]; then
    # rm Dockerfile
    # ---- edits here don't require a docker build ----
    uvicorn bot:app --host 0.0.0.0 --port 4000
    rm -rf /tmp/messages
    python3 messages.py post HR Hal         "`cat messages/HR/Hal.md`"
    python3 messages.py post HR Billing     "`cat messages/HR/Billing.md`"
    python3 messages.py post CX143623 Hal   "`cat messages/CX143623/Hal.md`"
    python3 hal.py
    python3 billing.py
    python3 balance.py
    python3 billing.py
    python3 hal.py
    # ----------------- end of edits ------------------
else
    rm start
    curl -sL https://github.com/gregclinton/bot/archive/refs/heads/main.zip -o bot.zip
    unzip -q bot.zip
    rm bot.zip
    mv bot-main bot
    cd bot
    sh start
fi
