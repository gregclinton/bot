if [ -f Dockerfile ]; then
    rm Dockerfile
    # ---- edits here don't require a docker build ----
    python3 messages.py post Hal Chief "$(cat hal.md)"
    python3 messages.py post Billing Chief "$(cat billing.md)"
    python3 messages.py post Hal CX143623 "My name is Fred. How much is my balance?"
    python3 bot.py
    # ----------------- end of edits ------------------
else
    rm start
    curl -sL https://github.com/gregclinton/bot/archive/refs/heads/main.zip -o bot.zip
    unzip -q bot.zip
    rm bot.zip
    mv bot-main bot
    cd bot
    sh start
fi
