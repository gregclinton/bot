if [ -f Dockerfile ]; then
    rm Dockerfile
    # ---- edits here don't require a docker build ----
    # export provider_model=openai,gpt-4.1-nano
    # export provider_model=groq,openai/gpt-oss-20b
    # export provider_model=openrouter,openai/gpt-oss-20b
    # export provider_model=fireworks,fireworks/gpt-oss-20b
    cat soul.hal.md account.greg.md > system.md
    cat thread.greg.md > thread.md
    python3 bot.py
    # ----------------- end of edits ------------------
else
    rm start
    curl -sL https://github.com/gregclinton/bot/archive/refs/heads/main.zip -o bot.zip
    unzip -q bot.zip
    rm bot.zip
    mv bot-main bot
    cd bot
    sh start
fi
