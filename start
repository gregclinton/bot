if [ -f Dockerfile ]; then
    rm Dockerfile
    # ---- edits here don't require a docker build ----
    python3 llm.py groq openai/gpt-oss-20b
    printf "Friday, February 6, 10:03 am \nCustomer \nHello. \n\n" > /tmp/thread.md
    # ----------------- end of edits ------------------
else
    rm start
    curl -sL https://github.com/gregclinton/bot/archive/refs/heads/main.zip -o bot.zip
    unzip -q bot.zip
    rm bot.zip
    mv bot-main bot
    cd bot
    sh start
fi
