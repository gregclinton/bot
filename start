if [ -f Dockerfile ]; then
    rm Dockerfile
    # ---- edits here donls't require a docker build ----
    rm -rf apps
    rm README.md setup start .gitignore
    ls
    mkdir /tmp/messages
    while true; do python3 workers.py && sleep 1; done &
    uvicorn web:app --host 0.0.0.0 --port 4000
    # ----------------- end of edits ------------------
else
    rm start
    curl -sL https://github.com/gregclinton/bot/archive/refs/heads/main.zip -o bot.zip
    unzip -q bot.zip
    rm bot.zip
    mv bot-main bot
    cd bot
    sh start
fi
